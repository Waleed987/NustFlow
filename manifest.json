{
    "manifest_version": 3,
    "name": "NustFlow",
    "version": "1.0.0",
    "description": "Save time with automatic login for NUST LMS and Qalam. Your credentials stay secure while you get instant access.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://lms.nust.edu.pk/*",
        "https://www.lms.nust.edu.pk/*",
        "https://qalam.nust.edu.pk/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://lms.nust.edu.pk/portal/*",
                "https://www.lms.nust.edu.pk/portal/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://lms.nust.edu.pk/lms/index.php*",
                "https://www.lms.nust.edu.pk/lms/index.php*"
            ],
            "js": [
                "redirect.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://qalam.nust.edu.pk/web/login*"
            ],
            "js": [
                "qalam.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://qalam.nust.edu.pk/student/dashboard*"
            ],
            "js": [
                "qalam-dashboard.js"
            ],
            "run_at": "document_idle"
        }
    ]
}